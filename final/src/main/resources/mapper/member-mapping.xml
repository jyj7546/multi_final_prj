<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.demo.mapper.MemberMapper">

    <select id="getMember" parameterType="String" resultType="MemberDTO">
        SELECT * FROM member WHERE mem_id = #{memId}
    </select>

    <select id="loginMember" parameterType="map" resultType="MemberDTO">
        SELECT * FROM member WHERE mem_id = #{memId} AND mem_pw = #{memPw}
    </select>

    <select id="getMemberCnt" resultType="int">
        SELECT COUNT(*) FROM member
    </select>

    <select id="getMemberList" resultType="map">
        SELECT * FROM member
    </select>

    <insert id="insertMember" parameterType="MemberDTO">
        INSERT INTO member (mem_id, mem_pw, mem_name, mem_birth, mem_email)
        VALUES (#{memId}, #{memPw}, #{memName}, #{memBirth}, #{memEmail})
    </insert>

    <delete id="deleteMember" parameterType="String">
        DELETE member WHERE mem_id = #{memId}
    </delete>

    
</mapper>